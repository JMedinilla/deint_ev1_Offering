<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_layImportance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/row_txtShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/row_txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="6dp"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/row_imgIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/row_txtShop"
        android:layout_margin="6dp"
        android:contentDescription="@string/contentdescription" />

    <TextView
        android:id="@+id/row_txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_txtShop"
        android:layout_margin="6dp"
        android:layout_toEndOf="@id/row_imgIcon"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold" />
</RelativeLayout>